# Wellsafer Backend Environment Variables
# 이 파일을 .env로 복사하고 실제 값으로 변경하세요

# Flask
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
PORT=5000

# Database (MySQL)
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/efwb3_dev?charset=utf8mb4

# MQTT Broker
MQTT_BROKER_URL=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# JWT
JWT_SECRET_KEY=your-jwt-secret-key

# SMS Gateway
SMS_API_KEY=your-sms-api-key
SMS_SENDER_NUMBER=01012345678

# 기상청 API
KMA_API_KEY=your-kma-api-key

# CORS (운영환경에서는 특정 도메인만 허용)
CORS_ORIGINS=*
